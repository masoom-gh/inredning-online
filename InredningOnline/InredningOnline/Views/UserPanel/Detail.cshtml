@model ProjectDetails

<div class="container m-2 p-2">
    <h2>Name: @Model.ProjectName</h2>
    <h6>Created on: @Model.ProjectCreated</h6>
    <p>Description: @Model.Description</p>
    
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th class="text-center">Product</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Supplier</th>
            <th class="text-center">Price/Item</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var project in Model.ProjectItems)
        {
            <tr>
                <td class="text-center">@project.Product.Name</td>
                <td class="text-center">@project.Quantity</td>
                <td class="text-center">@project.Product.Supplier</td>
                <td class="text-center">@project.Product.Price.ToString("c")</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total price:</td>
            <td class="text-center">
                @Model.CalculateTotalExpenseOfEachProject().ToString("c")</td>
        </tr>
        </tfoot>
    </table>
    <a class="btn btn-warning" asp-controller="UserPanel" asp-action="ListProjects">Back</a>
    <a class="btn btn-secondary" asp-controller="UserPanel" asp-action="Edit"
       asp-route-projectDetailsId="@Model.ProjectDetailsId">Edit</a>
</div>

